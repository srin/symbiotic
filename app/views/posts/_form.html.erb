
<div class="large-offset-1">

  <%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prevent this question from being posted. Please take a look at these errors and try again.</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <form>
   
    <div class="row askquestionform ">
      <div class="large-12 small-12 columns questioninput">

    <%= f.label :title, "1. Your question" %><br>
    <%= f.text_field :title, :placeholder => "Ask here..."%>
      </div>
    </div>

    <div class="row askquestionform">
      <div class="large-12 small-12 columns descriptioninput" style="width: 100%;">
        <div>
        <%= f.label :description, "2. Please enter any useful background info to the question" %><br>
        <%= f.text_area :description, :placeholder => "Specific facts, information that would help provide an answer", class: "descriptioninput" %>
      </div>
      </div>
    </div>

    <div class="row askquestionform">
      <div class="large-12 small-12 columns">
      <%= f.label :category, "3. Please choose which category your question relates to"%> <br>
      <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => "Please select" %> <br>
      </div>
    </div>

  </br>
    <div class="row askquestionform">
      <div class="large-12 small-12 columns ">
        <%= f.check_box :anonymous %> 
        <%= f.label :anonymous, " I would like to ask this question anonymously." %> 
      </div>
    </div>  
  </br>
  
    <div class="actions">
      <%= f.submit "Post Question", class: "button button-postquestion" %> 
    </div>

  
<% end %>
</div>
</div>

</div>

