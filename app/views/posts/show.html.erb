  <div class="row qnaquestionbox">

  <div class="large-12 small-12 columns qnaquestion">
    <p><%= @post.title %></p>

 <div class="large-12 small-12 columns description">
    <p><%= @post.description %> </p>

    <ul class="inline-list qnainfo">
      <li> <span class="date">Asked on <%= @post.created_at.to_formatted_s(:long) %></span></li>
      <li><span class="category">Category: <%= @post.category.name %></span></li>
      <li><%= link_to "Answer", @post, class: "uk-button in-line right answer-button" %></li>
      </ul>
  </div>
</div>

</div>

<div class="row answertitle">
    <div class="large-12 small-12 columns ">
      <h5><%=@post.comments_count%> Answers</h5></div>
    </div>

<% @post.comments.each do |comment| %>
    <div class="row answerbox">
      <div class="large-1 small-12 columns votesection">

       <ul class="vote">
        <li><%= link_to "^", like_post_comment_path(@post, comment), method: :put, class: "uk-button vote" %> </li>
      </ul>
      
      <ul class="vote">
        <li> <%= comment.get_upvotes.size - comment.get_downvotes.size %></li>

      </ul>

      <ul class="vote">
        <li><%= link_to "v", dislike_post_comment_path(@post, comment), class: "uk-button vote" %></li>
      </ul>

    </div>
    <div class="large-11 small-12 columns question">
      <p><%= simple_format comment.body %> </p>

      <ul class="inline-list info">
        <li> <span class="date">Answered on <%= comment.created_at.to_formatted_s(:long) %></span></li>
        <li><a class="firstlastname"><%= comment.user.name %> from <% comment.user.company %><span class="userscore">Comment score: <%= comment.get_upvotes.size - comment.get_downvotes.size %></span> </a></li>
      </ul>
    </div>
  </div>
<%end%>


<div class="row">
  <div class="large-9 large-offset-3 columns">


<%= simple_form_for [@post, Comment.new]  do |f| %>
  <h3>Share an answer </h3>
    <div class="field">
      <%= f.text_area :body%>
    </div>
    <br>
      <%= f.submit "Add Comment", class: "button success" %>
  <%end%>

</div>
</div>