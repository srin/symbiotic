<div class="row">
  <div class="large-9 large-offset-3 columns">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "1. What's your name?" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :company, "2. What's name of your company / firm / organisation?" %><br />
    <%= f.text_field :company %>
  </div>

  <div class="field">
    <%= f.label :email, "3. What's your email address? (if you're a lawyer, please use your work / professional email address to enable quicker verification)" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :verified,  "4. Are you a solicitor registered with the Solicitors Regulation Authority? (Check the box if 'yes' and enter your SRA number)" %> <br>
    <%= f.check_box :verified %> Yes, I'm a solicitor <br> <%= f.label :SRA_number, "SRA Number" %> <%= f.text_field :SRA_number %> <br />
  </div>  

  <div class="field">
    
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<div>
</div>